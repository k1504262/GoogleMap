<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dip">
    <TextView
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@color/blue"
        android:text="Settings"
        android:gravity="center"
        android:textSize="@dimen/font_medium"
        android:id="@+id/setting_title"
        android:layout_gravity="center_horizontal"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <GridLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:useDefaultMargins="true"
        android:columnOrderPreserved="false"
        android:columnCount="3"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/setting_grid">
        <TextView
            android:layout_marginTop="10dp"
            android:text="Home Station"
            android:gravity="left"
            android:textSize="@dimen/font_medium_small"
            android:layout_columnSpan="1"
            android:layout_column="0"
            android:layout_row="0"
            android:id="@+id/home_stop"
            android:layout_gravity="left"
            android:textAlignment="gravity"
            android:textColor="@color/blue"
            android:layout_width="146dp" />
        <Spinner
            android:id="@+id/default_stop_spinner"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/font_medium_small"
            android:layout_columnSpan="2"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_row="0"
            android:minWidth="180dp"
            android:layout_gravity="left"
            android:textColor="@color/blue" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnSpan="3" />
        <TextView
            android:layout_marginTop="10dp"
            android:text="Minzoom"
            android:gravity="left"
            android:textSize="@dimen/font_medium_small"
            android:layout_columnSpan="1"
            android:layout_column="0"
            android:layout_row="2"
            android:id="@+id/minzoom"
            android:layout_gravity="left"
            android:textColor="@color/blue"
            android:layout_width="148dp" />
        <SeekBar
            android:id="@+id/zoom_seekBar"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:layout_height="30dp"
            android:layout_column="1"
            android:minWidth="180dp"
            android:layout_columnSpan="1"
            android:layout_row="2"
            android:max="8" />
        <TextView
            android:text=""
            android:id="@+id/minzoom_val"
            android:gravity="center_vertical"
            android:textSize="@dimen/font_medium_small"
            android:layout_columnSpan="1"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_gravity="left"
            android:textColor="@color/blue"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnSpan="3" />
        <TextView
            android:layout_marginTop="10dp"
            android:text="Refresh Rate (Sec)"
            android:layout_height="30dp"
            android:id="@+id/refresh_rate"
            android:gravity="left"
            android:textSize="@dimen/font_medium_small"
            android:layout_columnSpan="2"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_gravity="left"
            android:textColor="@color/blue" />
        <EditText
            android:id="@+id/refresh_rate_value"
            android:layout_gravity="bottom"
            android:text="10"
            android:gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_height="42dp"
            android:hint="Time in seconds"
            android:textSize="@dimen/font_medium_small"
            android:layout_columnSpan="2"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_width="170dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_columnSpan="3" />
    </GridLayout>
</LinearLayout>

