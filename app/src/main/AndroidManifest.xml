            android:name="edu.umb.subway.OutgoingReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" >
                </action>
            </intent-filter>
        </receiver>
        <receiver
            android:name="edu.umb.subway.IncomingReceiver"
            android:enabled="true"
            android:exported="false" >
